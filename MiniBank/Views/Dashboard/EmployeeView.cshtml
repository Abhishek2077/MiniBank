@model List<MiniBank.Models.EmployeeApplicationViewModel>
@{
    ViewData["Title"] = "Employee Dashboard";
}

<div class="card">
    <div class="card-header">
        <h3>All Customer Applications</h3>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.First().ApplicantFullName)</th>
                        <th>@Html.DisplayNameFor(m => m.First().ApplicantEmail)</th>
                        <th>@Html.DisplayNameFor(m => m.First().CompanyStructure)</th>
                        <th>@Html.DisplayNameFor(m => m.First().SubmittedAt)</th>
                        <th>@Html.DisplayNameFor(m => m.First().Status)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ApplicantFullName</td>
                            <td>@item.ApplicantEmail</td>
                            <td>@item.CompanyStructure</td>
                            <td>@item.SubmittedAt.ToString("dd-MMM-yyyy")</td>
                            <td>
                                @{
                                    var statusClass = "bg-warning text-dark"; // Default for Pending
                                    if (item.Status == "Approved") { statusClass = "bg-success text-white"; }
                                    if (item.Status == "Rejected") { statusClass = "bg-danger text-white"; }
                                }
                                <span class="badge @statusClass">@item.Status</span>
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.ApplicationID" class="btn btn-sm btn-info">Details</a>
                                <form asp-action="EmployeeDeleteConfirmed" asp-route-id="@item.ApplicationID" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this application?');">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info">
                No applications have been submitted yet.
            </div>
        }
    </div>
</div>